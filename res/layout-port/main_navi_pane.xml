<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" android:background="@color/king_1">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
		    <Button
		        android:id="@+id/btnNaviTimer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/timer" 
		        android:layout_weight="0.5" 
		        android:drawableLeft="@drawable/timer"
		        android:textAppearance="?android:attr/textAppearanceSmall"/>
		
		    <Button
		        android:id="@+id/btnNaviComputer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/computer" 
		        android:layout_weight="0.5" 
		        android:drawableLeft="@drawable/network"
		        android:textAppearance="?android:attr/textAppearanceSmall"/>
		
		    <Button
		        android:id="@+id/btnNaviMusic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/play_music" 
		        android:layout_weight="0.5" 
		        android:drawableLeft="@drawable/play_music_on"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		    <Button
		        android:id="@+id/btnNaviRec"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/record_list" 
		        android:layout_weight="0.5" 
		        android:drawableLeft="@drawable/rec_enable"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		            
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
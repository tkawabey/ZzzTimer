    <style name="wood" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">130px</item>
        <item name="android:layout_height">340px</item>
        <item name="android:scrollbars">none</item>     
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/custum_soinner_bg</item>
		<item name="child_background">@drawable/custum_soinner_line</item>
        <item name="header_background">@drawable/custum_soinner_line</item>
